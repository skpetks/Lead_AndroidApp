<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sd"
    android:background="@drawable/edit_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sd"
        android:paddingRight="@dimen/_10sd"
        android:background="@drawable/text_bg"

        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="16sp"
                android:id="@+id/tv_VisitorCode"
                android:visibility="gone"
                android:lineSpacingExtra="8sp"
                android:letterSpacing="0.009375"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="4"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile"
                    android:id="@+id/image_profile"
                    android:scaleType="fitCenter"
                    >

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvVisitorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="left"
                        android:letterSpacing="0.00714"
                        android:lineSpacingExtra="6dp"
                        android:text="Vivek"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="right"
                        android:letterSpacing="0.00714"
                        android:lineSpacingExtra="6dp"
                        android:text="11:30 AM"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"

                    android:weightSum="2"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:gravity="left"
                        android:textSize="14sp"
                        android:letterSpacing="0.00714"
                        android:lineSpacingExtra="6dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"

                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_meeting_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="left"
                        android:letterSpacing="0.009375"
                        android:lineSpacingExtra="8sp"
                        android:text="01-06-2025"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <!-- First TextView: "Purpose:" -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_label_purpose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="start"
                            android:letterSpacing="0.00714"
                            android:lineSpacingExtra="6dp"
                            android:text="Purpose:"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <!-- Second TextView: "Parent" -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_meeting_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@id/tv_label_purpose"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="start"
                            android:letterSpacing="0.00714"
                            android:lineSpacingExtra="6dp"
                            android:text="Parent"
                            android:textColor="@color/black"
                            android:textSize="12sp" />



                        <!-- Third TextView: "01-06-2025" aligned to right -->

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="2"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:gravity="left"
                        android:textSize="14sp"
                        android:letterSpacing="0.00714"
                        android:lineSpacingExtra="6dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"

                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:gravity="right"
                        android:textSize="14sp"
                        android:paddingLeft="@dimen/_10sd"
                        android:paddingRight="@dimen/_10sd"
                        android:paddingTop="@dimen/_5sd"
                        android:paddingBottom="@dimen/_5sd"
                        android:lineSpacingExtra="8sp"
                        android:letterSpacing="0.009375"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/black"
                        android:id="@+id/tv_statusdetail"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reject"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:gravity="center"
                android:textSize="14sp"
                android:lineHeight="20sp"
                android:letterSpacing="0.025"
                android:fontFamily="@font/inter_medium"
                android:lineSpacingExtra="8sp"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:background="@drawable/orange_button_background"
                android:textColor="@color/red"
                />



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Reschedule"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/grey_button_background"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:lineHeight="20sp"
                android:letterSpacing="0.025"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:id="@+id/btn_reschedule"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_approve"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_background"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:letterSpacing="0.025"
                android:lineHeight="20sp"
                android:text="Approve"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_arrived"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_background"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:letterSpacing="0.025"
                android:lineHeight="20sp"
                android:text="Arrived"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/green_button_background"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:paddingLeft="@dimen/_20sd"
                android:paddingRight="@dimen/_20sd"
                android:lineHeight="20sp"
                android:letterSpacing="0.025"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/white"
                android:id="@+id/btn_checkin"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/green_button_background"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:lineHeight="20sp"
                android:letterSpacing="0.025"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/white"
                android:id="@+id/btn_checkout"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/green_button_background"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:lineHeight="20sp"
                android:letterSpacing="0.025"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/white"
                android:id="@+id/btn_cancel"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Staff for Approval"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/green_button_background"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:paddingLeft="@dimen/_20sd"
            android:paddingRight="@dimen/_20sd"
            android:lineHeight="20sp"
            android:drawableTop="@drawable/ic_call"
            android:letterSpacing="0.025"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:id="@+id/btn_CallApproval"
            />

    </LinearLayout>

</LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>