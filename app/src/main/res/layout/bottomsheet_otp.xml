<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- OTP Boxes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
    android:fontFamily="@font/inter_regular"
        android:textSize="@dimen/_36sdp"
        android:textColor="@color/black"
        android:gravity="center"
        ></TextView>

    <LinearLayout
        android:id="@+id/otp_box_container"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Repeat for 6 boxes -->
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/otp_1" style="@style/OtpBoxStyle"/>
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/otp_2" style="@style/OtpBoxStyle"/>
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/otp_3" style="@style/OtpBoxStyle"/>
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/otp_4" style="@style/OtpBoxStyle"/>
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/otp_5" style="@style/OtpBoxStyle"/>
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/otp_6" style="@style/OtpBoxStyle"/>
    </LinearLayout>

    <!-- Custom Keypad -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3">

        <!-- Numbers 1 to 9 -->
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_1" android:text="1" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_2" android:text="2" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_3" android:text="3" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_4" android:text="4" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_5" android:text="5" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_6" android:text="6" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_7" android:text="7" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_8" android:text="8" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_9" android:text="9" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_clear" android:text="âŒ«" style="@style/KeypadButton"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_0" android:text="0" style="@style/KeypadButton"/>
    </GridLayout>
</LinearLayout>
